<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/div_color</item>
    </style>
    <!--分隔线-->
    <style name="div_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/div_color</item>
    </style>
    <!--字体大小-->
    <style name="textcontentsizewhite">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>

    </style>
<style name="textcontents11izewhite">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="textcontentsizeblack">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="texttitleswhiteize">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="texttitleblacksize">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="titleswhiteize">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="titleblacksize">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="texttitleize">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <!--图片大小-->

    <style name="ImagePicxiao">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/Imagepicxiao</item>
        <item name="android:layout_height">@dimen/Imagepicxiao</item>

    </style>
    <style name="ImagePismall">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">10dp</item>

    </style>

    <style name="Rightarrow">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/rightarrows</item>
        <item name="android:layout_height">@dimen/rightarrows</item>
        <item name="android:src">@mipmap/icon_jiantourig</item>
        <item name="android:layout_centerVertical">true</item>

    </style>
    <style name="ImageEntry">

        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:src">@mipmap/icon_kong</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>
    <style name="ImagePicicon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/Imagepicicon</item>
        <item name="android:layout_height">@dimen/Imagepicicon</item>

    </style>
    <style name="Buutton_submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/shape_btn_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
    </style>

    <attr name="type">
        <enum name="none" value="0" />
        <enum name="circle" value="1" />
        <enum name="rounded_rect" value="2" />
    </attr>
    <attr name="borderColor" format="color" />
    <attr name="borderWidth" format="dimension" />
    <attr name="rectRoundRadius" format="dimension" />

    <declare-styleable name="ImageViewPlus">
        <attr name="type" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
        <attr name="rectRoundRadius" />
    </declare-styleable>
    <style name="ButtomPopu">
        <item name="android:windowEnterAnimation">@anim/popu_in</item>
        <item name="android:windowExitAnimation">@anim/popu_out</item>
    </style>
</resources>
