<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.onedrop.activitys.PaySuccessActivity">
        <include
            layout="@layout/toolbar"
            />
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                       style="@style/texttitleblacksize"
                        android:text="恭喜你成为代理"
                        android:layout_gravity="center_horizontal"
                        />
                        <ImageView
                            android:id="@+id/iv_pic"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            />
                    <TextView
                        android:id="@+id/tv_content"
                        style="@style/textcontentsizeblack"
                        android:lineSpacingExtra="5dp"
                        android:layout_marginTop="10dp"
                        android:text="本公司三款产品均为健康产品,著名影星张铁林代言。长期使用身体更健康，人人都有需求"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        />
                    <Button
                        android:id="@+id/btn_share"
                        style="@style/Buutton_submit"
                        android:text="分享给好友"
                        android:layout_marginTop="40dp"
                        />
                </LinearLayout>

            </RelativeLayout>
</LinearLayout>
