<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.dlwx.onedrop.activitys.SetPayPWdActivity">
    <include
        layout="@layout/toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/div_color" />

        <TextView
            style="@style/texttitleblacksize"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.8"
            android:text="设置密码" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/div_color" />

        <EditText
            android:id="@+id/et_pwd"
            android:lines="1"
            android:maxEms="6"
            android:maxLength="6"
            android:inputType="numberPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:hint="设置提现密码"
            android:padding="10dp"
            android:textSize="15sp" />
    </LinearLayout>
    <View style="@style/div_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/div_color" />

        <TextView
            style="@style/texttitleblacksize"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.8"
            android:text="再次输入密码" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/div_color" />

        <EditText
            android:id="@+id/et_affpwd"
            android:layout_width="0dp"
            android:lines="1"
            android:maxLength="6"
            android:inputType="numberPassword"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:hint="再次输入提现密码"
            android:padding="10dp"
            android:textSize="15sp" />
    </LinearLayout>
    <View style="@style/div_line" />

        <Button
            android:id="@+id/btn_complete"
            android:text="@string/complete"
           style="@style/Buutton_submit"
            android:layout_marginTop="30dp"
            />
</LinearLayout>
