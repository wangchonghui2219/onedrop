<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.onedrop.activitys.LoginActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <View style="@style/div_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/div_color" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/div_color" />

            <TextView
                style="@style/texttitleblacksize"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.17"
                android:text="@string/username" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/div_color" />
            <EditText
                android:id="@+id/et_useraccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@null"
                android:hint="请输入手机号/用户名"
                android:padding="10dp"
                android:maxLines="1"
                android:textSize="15sp" />
        </LinearLayout>

        <View style="@style/div_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/texttitleblacksize"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.2"
                android:text="@string/password" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/div_color" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@null"
                android:maxLines="1"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <View style="@style/div_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_register"
                    style="@style/textcontentsizeblack"
                    android:padding="10dp"
                    android:text="注册"
                    android:textColor="@color/orange" />

                <TextView
                    android:id="@+id/tv_forgit"
                    style="@style/textcontentsizeblack"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="忘记密码"
                    android:textColor="@color/orange" />

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/Buutton_submit"
            android:layout_marginTop="10dp"
            android:text="登录" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_weight="0.7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    style="@style/div_line"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第三方帐号快速登录"
                        android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <View
                    style="@style/div_line"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_qq"
                style="@style/ImagePicicon"
                android:src="@mipmap/icon_qq"
                />

            <ImageView
                android:id="@+id/iv_wx"
                android:layout_marginLeft="30dp"
                style="@style/ImagePicicon"
                android:src="@mipmap/icon_weixin"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
