<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/texttitleize"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="提现申请已提交请等待"

        />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/icon_tixiandengdai"
            android:layout_gravity="center_horizontal"
            />
        <View
            style="@style/div_line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/textcontentsizeblack"
                android:text="预计到帐时间"
                android:layout_weight="1"
                android:textColor="@color/garytext"
                 />
            <TextView
                android:id="@+id/tv_date"
                style="@style/textcontentsizeblack"
                android:text="2017-11-11 11:53:08"
                 />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/textcontentsizeblack"
            android:text="银行卡"
            android:layout_weight="1"
            android:textColor="@color/garytext"
            />
        <TextView
            android:id="@+id/tv_bakName"
            style="@style/textcontentsizeblack"
            android:text="建设银行  尾号110"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/textcontentsizeblack"
            android:text="提现金额"
            android:layout_weight="1"
            android:textColor="@color/garytext"
            />
        <TextView
            android:id="@+id/tv_money"
            style="@style/textcontentsizeblack"
            android:text="￥500.00"
            />
    </LinearLayout>
            <Button
                style="@style/Buutton_submit"
                android:layout_marginTop="40dp"
                android:id="@+id/btn_complete"
                android:text="@string/complete"
                android:layout_marginBottom="40dp"
                 />
</LinearLayout>