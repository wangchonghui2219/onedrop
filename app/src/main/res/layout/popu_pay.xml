<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_aliPay"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView

            style="@style/ImagePicxiao"
            android:src="@mipmap/icon_zfzhi"
            />
            <TextView
                style="@style/textcontentsizeblack"
                android:text="支付宝"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                />
                <CheckBox
                    android:checked="true"
                    android:enabled="false"
                    android:focusable="false"
                    android:id="@+id/cb_alicheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selete_check"
                    />
    </LinearLayout>
        <View
            style="@style/div_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    <LinearLayout
        android:padding="10dp"
        android:id="@+id/ll_wxPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView

            style="@style/ImagePicxiao"
            android:src="@mipmap/icon_zfwei"
            />
        <TextView
            style="@style/textcontentsizeblack"
            android:text="微信"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />
        <CheckBox
            android:focusable="false"
          android:enabled="false"
            android:id="@+id/cb_wxcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selete_check"
            />
    </LinearLayout>
    <View
        style="@style/div_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="确认支付"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_auth_bg"
            />
</LinearLayout>